# ============================================
# OpenChat Server 环境配置示例
# 复制此文件为 .env 并填写实际值
# ============================================

# 应用配置
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=openchat
DB_PASSWORD=openchat_password
DB_NAME=openchat
DB_LOGGING=false
# 连接池配置
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_MAX_LIFETIME=300000

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# 队列使用独立的数据库
REDIS_QUEUE_DB=1

# JWT 配置
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# WebSocket 配置
WS_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# 可选功能配置
# ============================================

# BullMQ 消息队列（默认启用，设为 false 禁用）
QUEUE_ENABLED=true

# 悟空IM 配置
WUKONGIM_API_URL=http://localhost:5001
WUKONGIM_TCP_ADDR=localhost:5100
WUKONGIM_WS_URL=ws://localhost:5200
WUKONGIM_MANAGER_URL=http://localhost:5300
WUKONGIM_TOKEN_AUTH=false

# 音视频 RTC 配置
VOLCENGINE_APP_ID=
VOLCENGINE_APP_KEY=
VOLCENGINE_APP_SECRET=

# AI Bot 配置
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# 第三方平台配置
TELEGRAM_BOT_TOKEN=
WHATSAPP_API_KEY=

# ============================================
# 高级配置（通常使用默认值）
# ============================================

# 限流配置
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# 日志配置
LOG_LEVEL=info
