{
  "name": "openchat",
  "version": "1.0.0",
  "description": "OpenChat 即时通讯服务端 - 规范化、标准化的服务端应用程序",
  "main": "dist/main.js",
  "bin": {
    "openchat": "./bin/openchat"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/main.ts",
    "start": "node dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "echo \"Lint not configured\" && exit 0",
    "migration:generate": "typeorm migration:generate -d src/data-source.ts",
    "migration:run": "typeorm migration:run -d src/data-source.ts",
    "migration:revert": "typeorm migration:revert -d src/data-source.ts",
    "db:init": "psql -d openchat -f database/schema.sql",
    "db:seed": "psql -d openchat -f database/seed.sql",
    "service:start": "./bin/openchat start",
    "service:stop": "./bin/openchat stop",
    "service:restart": "./bin/openchat restart",
    "service:status": "./bin/openchat status",
    "service:console": "./bin/openchat console",
    "service:logs": "./bin/openchat logs",
    "install:linux": "sudo ./scripts/install.sh",
    "install:win": ".\\scripts\\install.bat"
  },
  "keywords": [
    "chat",
    "im",
    "websocket",
    "rtc",
    "nestjs",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/platform-socket.io": "^11.1.12",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.12",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/bcrypt": "^6.0.0",
    "@types/uuid": "^11.0.0",
    "axios": "^1.13.4",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.67.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "dotenv": "^17.2.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "pg": "^8.18.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.3",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.12",
    "@types/compression": "^1.8.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
