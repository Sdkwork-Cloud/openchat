{
  "name": "openchat",
  "version": "1.0.0",
  "description": "OpenChat 即时通讯服务端 - 规范化、标准化的服务端应用程序",
  "main": "dist/main.js",
  "bin": {
    "openchat": "./bin/openchat"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/main.ts",
    "start": "node dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:install": "./scripts/install-test.sh quick",
    "test:install:full": "./scripts/install-test.sh full",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "migration:generate": "typeorm migration:generate -d src/data-source.ts",
    "migration:run": "typeorm migration:run -d src/data-source.ts",
    "migration:revert": "typeorm migration:revert -d src/data-source.ts",
    "db:init": "psql -d openchat -f database/schema.sql",
    "db:seed": "psql -d openchat -f database/seed.sql",
    "db:backup": "./scripts/docker-deploy.sh db-backup",
    "db:restore": "./scripts/docker-deploy.sh db-restore",
    "service:start": "./bin/openchat start",
    "service:stop": "./bin/openchat stop",
    "service:restart": "./bin/openchat restart",
    "service:status": "./bin/openchat status",
    "service:console": "./bin/openchat console",
    "service:logs": "./bin/openchat logs",
    "docker:up": "docker compose --profile database --profile cache --profile im up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:build": "docker compose build",
    "docker:ps": "docker compose ps",
    "docker:quick": "docker compose -f docker-compose.quick.yml up -d",
    "docker:quick:down": "docker compose -f docker-compose.quick.yml down",
    "install:linux": "sudo ./scripts/install.sh",
    "install:win": ".\\scripts\\install.bat",
    "install:mac": "./scripts/install.sh",
    "install:status": "./scripts/install-manager.sh status",
    "health": "./scripts/health-check.sh quick",
    "health:full": "./scripts/health-check.sh full",
    "health:monitor": "./scripts/health-check.sh --monitor",
    "precheck": "./scripts/precheck.sh",
    "precheck:win": ".\\scripts\\precheck.bat",
    "diagnose": "./scripts/diagnose.sh",
    "auto-fix": "./scripts/auto-fix.sh --all",
    "log:analyze": "./scripts/log-analyzer.sh analyze"
  },
  "keywords": [
    "chat",
    "im",
    "websocket",
    "rtc",
    "nestjs",
    "typescript"
  ],
  "author": "",
  "license": "AGPL-3.0",
  "type": "commonjs",
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/platform-socket.io": "^11.1.12",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.12",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/bcrypt": "^6.0.0",
    "@types/uuid": "^11.0.0",
    "axios": "^1.13.4",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.67.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "dotenv": "^17.2.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.18.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.3",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.12",
    "@types/compression": "^1.8.1",
    "@types/jest": "^30.0.0",
    "@types/mqtt": "^0.0.34",
    "@types/node": "^25.1.0",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
